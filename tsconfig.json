{
    "exclude": [
      "node_modules"
    ],
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "module": "es2015",
      "target": "es5",
      "moduleResolution": "node",
      "isolatedModules": true,
      "typeRoots": [
        "./types",
        "./node_modules/vue/types"
      ],
      "lib": [
        "dom",
        "es5",
        "es2015.promise"
      ],
      "sourceMap": true,
      "pretty": true
    }
  }